@model List<AirlineBookingSystem.Models.ViewModels.BookingDetailVM>

<h1>Booking Details</h1>

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>Booking No.</th>
            <th>Flight No.</th>
            <th>Passenger Name</th>
            <th>Passenger Email</th>
            <th>Number of Seats</th>
            <th>Total Price</th>
            <th>Departure Airport</th>
            <th>Destination Airport</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.FlightNumber</td>
                <td>@booking.PassengerName</td>
                <td>@booking.PassengerEmail</td>
                <td>@booking.NumberOfSeats</td>
                <td>@booking.TotalPrice</td>
                <td>@booking.DepartureAirport</td>
                <td>@booking.DestinationAirport</td>
                <td>@booking.DepartureTime.ToString("MM/dd/yyyy HH:mm")</td>
                <td>@booking.ArrivalTime.ToString("MM/dd/yyyy HH:mm")</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@booking.BookingId" method="post">
                        <button type="submit" class="btn btn-danger" id="deleteButton_@booking.BookingId">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();

            // Loop through each delete button and disable if departure time is past
            $('button[type="submit"]').each(function () {
                var bookingId = $(this).closest('tr').find('td:first').text();
                var departureTimeString = $(this).closest('tr').find('td:nth-child(9)').text();
                var departureTime = new Date(departureTimeString);
                var currentTime = new Date();

                if (departureTime < currentTime) {
                    $(this).prop('disabled', true);
                }
            });
        });
    </script>
}
