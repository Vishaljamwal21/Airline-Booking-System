@model AirlineBookingSystem.Models.FlightCategory
@{
    ViewData["Title"] = "SaveOrEdit";
    var title = Model.FlightCategoryId != 0 ? "Edit Category" : "New Category";
    var saveUpdate = Model.FlightCategoryId != 0 ? "Update" : "save";
}
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.FlightCategoryId" />
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="@Model.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Name" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="@Model.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Price" class="form-control">
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.FlightCategoryId != 0)
                    {
                        <partial name="_editandbacktolistbutton" />
                    }
                    else
                    {
                        <partial name="_createandbacktolistbutton" />
                    }
                </div>

            </div>
        </div>

    </div>

</form>


