<div class="row">
    <div class="col-9">
        <h2 class=" text-primary">Flight List</h2>
    </div>
    <div class="col-3">
        <a asp-action="SaveorEdit" class="btn btn-info form-control">
            <i class=" fas fa-plus">&nbsp;Add New Flight</i>
        </a>
    </div>
</div>
<div class="container rounded border p-2 m-2">
    <table id="tblData" class="table table-bordered table-striped table-active">
        <thead>
            <tr>
                <th>Airline</th>
                <th>FlightNumber</th>
                <th>ImageUrl</th>
                <th>DepartureAirport</th>
                <th>DestinationAirport</th>
                <th>DepartureTime</th>
                <th>ArrivalTime</th>
                <th>AvailableSeats</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts {
    <script src="~/js/flight.js"></script>
}